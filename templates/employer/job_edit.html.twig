{# templates/employer/job_edit.html.twig #}
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Edit Job | EliteCareer</title>

  {# Fonts & Icons #}
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css">

  <style>
    :root {
      --primary: #2563eb;
      --primary-light: #60a5fa;
      --primary-soft: rgba(37,99,235,0.08);
      --accent: #ec4899;

      --light: #f1f5f9;
      --darker: #0f172a;
      --dark: #020617;

      --gray: #64748b;
      --gray-dark: #475569;
      --gray-light: #e2e8f0;
      --gray-lighter: #f8fafc;

      --success: #16a34a;
      --warning: #f59e0b;
      --error: #ef4444;

      --radius: 0.75rem;
      --radius-lg: 1rem;

      --shadow-sm: 0 4px 12px rgba(15,23,42,0.12);
      --shadow: 0 8px 20px rgba(15,23,42,0.1);
      --shadow-lg: 0 18px 45px rgba(15,23,42,0.18);

      --transition: 180ms ease;
    }

    * {
      box-sizing: border-box;
    }

    html, body {
      margin: 0;
      padding: 0;
    }

    body {
      font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
      background:
        radial-gradient(circle at top left, #e0f2fe 0, #f9fafb 40%, #f8fafc 100%);
      color: var(--darker);
      -webkit-font-smoothing: antialiased;
    }

    .container {
      max-width: 1100px;
      margin: 0 auto;
      padding: 0 20px;
    }

    /* =====================
       Layout / Header
       ===================== */
    .job-page-shell {
      padding: 140px 0 80px;
    }

    .job-page-inner {
      max-width: 1000px;
      margin: 0 auto;
    }

    .job-page-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 16px;
      margin-bottom: 24px;
      flex-wrap: wrap;
    }

    .job-page-title {
      font-family: "Plus Jakarta Sans", system-ui, sans-serif;
      font-size: 2.1rem;
      font-weight: 800;
      color: var(--darker);
      margin: 0 0 4px;
      letter-spacing: -0.03em;
      display:flex;
      align-items:center;
      gap:8px;
    }

    .job-page-title i {
      color: var(--primary);
      font-size: 1.5rem;
    }

    .job-page-sub {
      color: var(--gray);
      font-size: 0.95rem;
      margin: 0;
    }

    .job-page-meta {
      margin-top: 8px;
      font-size: 0.8rem;
      color: rgba(100,116,139,0.95);
    }

    .job-page-meta strong {
      color: var(--darker);
    }

    .job-actions {
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
      justify-content: flex-end;
    }

    /* =====================
       Buttons
       ===================== */
    .btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      padding: 9px 18px;
      border-radius: 999px;
      border: 1px solid transparent;
      font-size: 0.9rem;
      font-weight: 600;
      text-decoration: none;
      cursor: pointer;
      background: linear-gradient(135deg, var(--primary), var(--primary-light));
      color: #ffffff;
      box-shadow: 0 10px 24px rgba(37,99,235,0.25);
      transition:
        transform var(--transition),
        box-shadow var(--transition),
        opacity var(--transition),
        background var(--transition),
        border-color var(--transition);
      white-space: nowrap;
    }

    .btn i {
      font-size: 0.9rem;
    }

    .btn:hover {
      transform: translateY(-1px);
      box-shadow: 0 16px 32px rgba(37,99,235,0.35);
      opacity: 0.98;
    }

    .btn:active {
      transform: translateY(0);
      box-shadow: 0 8px 18px rgba(30,64,175,0.5);
    }

    .btn-secondary {
      background: rgba(15,23,42,0.02);
      color: var(--darker);
      border-color: rgba(148,163,184,0.7);
      box-shadow: 0 8px 20px rgba(15,23,42,0.06);
    }

    .btn-secondary:hover {
      background: rgba(15,23,42,0.06);
      box-shadow: 0 12px 26px rgba(15,23,42,0.12);
    }

    .btn-ghost {
      background: transparent;
      border-color: rgba(148,163,184,0.5);
      color: var(--darker);
      box-shadow: none;
    }

    .btn-ghost:hover {
      background: rgba(15,23,42,0.03);
    }

    /* =====================
       Alerts (flash messages)
       ===================== */
    .alert {
      margin-bottom: 14px;
      padding: 10px 12px;
      border-radius: var(--radius);
      font-size: 0.9rem;
      border: 1px solid;
      display: flex;
      gap: 10px;
      align-items: flex-start;
      background: #fff;
      box-shadow: var(--shadow-sm);
    }

    .alert i {
      margin-top: 2px;
      font-size: 1rem;
    }

    .alert span {
      flex: 1;
    }

    .alert-success {
      background: rgba(16,185,129,0.08);
      border-color: rgba(16,185,129,0.4);
      color: var(--success);
    }

    .alert-error {
      background: rgba(239,68,68,0.06);
      border-color: rgba(239,68,68,0.35);
      color: var(--error);
    }

    /* =====================
       Card & form container
       ===================== */
    .job-card {
      background: #ffffff;
      border-radius: var(--radius-lg);
      border: 1px solid rgba(148,163,184,0.5);
      box-shadow: var(--shadow-lg);
      padding: 24px 24px 22px;
      position: relative;
      overflow: hidden;
    }

    .job-card::before {
      content: "";
      position: absolute;
      inset: 0;
      background:
        radial-gradient(700px 320px at -10% 0%, rgba(59,130,246,0.09), transparent 55%),
        radial-gradient(650px 300px at 110% 10%, rgba(139,92,246,0.12), transparent 60%);
      pointer-events: none;
      opacity: 0.9;
    }

    .job-card-inner {
      position: relative;
      z-index: 1;
    }

    .job-form {
      display: flex;
      flex-direction: column;
      gap: 18px;
    }

    .job-form-grid {
      display: grid;
      grid-template-columns: minmax(0, 1.4fr) minmax(0, 1fr);
      gap: 18px 24px;
    }

    .job-form-col {
      display: flex;
      flex-direction: column;
      gap: 14px;
    }

    @media (max-width: 768px) {
      .job-page-shell {
        padding: 120px 16px 60px;
      }

      .job-form-grid {
        grid-template-columns: 1fr;
      }
    }

    /* =====================
       Fields
       ===================== */
    .job-field {
      display: flex;
      flex-direction: column;
      gap: 6px;
    }

    .job-label-row {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 8px;
    }

    .job-label {
      font-size: 0.9rem;
      font-weight: 600;
      color: var(--darker);
    }

    .job-label-hint {
      font-size: 0.78rem;
      color: rgba(100,116,139,0.9);
    }

    .job-input,
    .job-select,
    .job-textarea {
      width: 100%;
      border-radius: var(--radius);
      border: 1px solid var(--gray-light);
      background: rgba(248,250,252,0.95);
      padding: 10px 12px;
      font-size: 0.95rem;
      outline: none;
      transition: var(--transition);
      color: var(--darker);
    }

    .job-input::placeholder,
    .job-textarea::placeholder {
      color: rgba(148,163,184,0.9);
    }

    .job-input:focus,
    .job-select:focus,
    .job-textarea:focus {
      border-color: var(--primary-light);
      background: #ffffff;
      box-shadow: 0 0 0 3px rgba(59,130,246,0.16);
    }

    .job-textarea {
      min-height: 130px;
      resize: vertical;
      line-height: 1.4;
    }

    /* =====================
       Footer / actions
       ===================== */
    .job-footer-row {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 12px;
      flex-wrap: wrap;
      margin-top: 6px;
    }

    .job-footer-note {
      font-size: 0.8rem;
      color: rgba(100,116,139,0.95);
      max-width: 520px;
    }

    .job-footer-note strong {
      color: var(--darker);
    }

    .job-submit {
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
      justify-content: flex-end;
    }
  </style>
</head>
<body>

<main class="job-page-shell">
  <div class="container job-page-inner">

    <header class="job-page-header">
      <div>
        <h1 class="job-page-title">
          <i class="fa-solid fa-pen-to-square"></i>
          Edit job
        </h1>
        <p class="job-page-sub">
          Update the details of your job posting so candidates see the latest information.
        </p>
        <p class="job-page-meta">
          Created <strong>{{ job.publishedAt ? job.publishedAt|date('Y-m-d H:i') : '—' }}</strong>
          • ID <strong>#{{ job.id }}</strong>
        </p>
      </div>
      <div class="job-actions">
        <a href="{{ path('web_employer_jobs') }}" class="btn btn-secondary">
          <i class="fa-solid fa-arrow-left"></i>
          Back to My Jobs
        </a>
        <a href="{{ path('web_dashboard') }}" class="btn btn-ghost">
          <i class="fa-solid fa-gauge-high"></i>
          Dashboard
        </a>
      </div>
    </header>

    {# Flash messages #}
    {% for msg in app.flashes('success') %}
      <div class="alert alert-success">
        <i class="fa-solid fa-circle-check"></i>
        <span>{{ msg }}</span>
      </div>
    {% endfor %}

    {% for msg in app.flashes('error') %}
      <div class="alert alert-error">
        <i class="fa-solid fa-circle-exclamation"></i>
        <span>{{ msg }}</span>
      </div>
    {% endfor %}

    <section class="job-card">
      <div class="job-card-inner">

        <form
          method="post"
          action="{{ path('web_employer_job_edit', { id: job.id }) }}"
          class="job-form"
        >
          {# CSRF token from controller (ID: 'manage_jobs') #}
          <input type="hidden" name="_csrf_token" value="{{ csrf_token }}">

          <div class="job-form-grid">
            <div class="job-form-col">
              <div class="job-field">
                <div class="job-label-row">
                  <label for="title" class="job-label">Job title</label>
                  <span class="job-label-hint">Required</span>
                </div>
                <input
                  id="title"
                  name="title"
                  type="text"
                  class="job-input"
                  required
                  value="{{ job.title }}"
                >
              </div>

              <div class="job-field">
                <div class="job-label-row">
                  <label for="location" class="job-label">Location</label>
                </div>
                <input
                  id="location"
                  name="location"
                  type="text"
                  class="job-input"
                  placeholder="City, Country or Remote"
                  value="{{ job.location|default('') }}"
                >
              </div>

              <div class="job-field">
                <div class="job-label-row">
                  <label for="employment_type" class="job-label">Employment type</label>
                </div>
                <select
                  id="employment_type"
                  name="employment_type"
                  class="job-select"
                  required
                >
                  <option value="FULL_TIME"  {{ job.employmentType == 'FULL_TIME'  ? 'selected' : '' }}>Full-time</option>
                  <option value="PART_TIME"  {{ job.employmentType == 'PART_TIME'  ? 'selected' : '' }}>Part-time</option>
                  <option value="CONTRACT"   {{ job.employmentType == 'CONTRACT'   ? 'selected' : '' }}>Contract</option>
                  <option value="INTERNSHIP" {{ job.employmentType == 'INTERNSHIP' ? 'selected' : '' }}>Internship</option>
                </select>
              </div>

              <div class="job-field">
                <div class="job-label-row">
                  <label for="work_mode" class="job-label">Work mode</label>
                </div>
                <select
                  id="work_mode"
                  name="work_mode"
                  class="job-select"
                  required
                >
                  <option value="ONSITE"  {{ job.workMode == 'ONSITE'  ? 'selected' : '' }}>On-site</option>
                  <option value="REMOTE"  {{ job.workMode == 'REMOTE'  ? 'selected' : '' }}>Remote</option>
                  <option value="HYBRID"  {{ job.workMode == 'HYBRID'  ? 'selected' : '' }}>Hybrid</option>
                </select>
              </div>
            </div>

            <div class="job-form-col">
              <div class="job-field">
                <div class="job-label-row">
                  <label for="status" class="job-label">Status</label>
                  <span class="job-label-hint">Control visibility to candidates</span>
                </div>
                <select
                  id="status"
                  name="status"
                  class="job-select"
                  required
                >
                  <option value="PUBLISHED" {{ job.status == 'PUBLISHED' ? 'selected' : '' }}>Published</option>
                  <option value="DRAFT"     {{ job.status == 'DRAFT'     ? 'selected' : '' }}>Draft</option>
                  <option value="CLOSED"    {{ job.status == 'CLOSED'    ? 'selected' : '' }}>Closed</option>
                </select>
              </div>
            </div>
          </div>

          <div class="job-field">
            <div class="job-label-row">
              <label for="description" class="job-label">Job description</label>
              <span class="job-label-hint">Required – responsibilities, mission, stack…</span>
            </div>
            <textarea
              id="description"
              name="description"
              class="job-textarea"
              required
            >{{ job.description }}</textarea>
          </div>

          <div class="job-field">
            <div class="job-label-row">
              <label for="requirements" class="job-label">Requirements</label>
              <span class="job-label-hint">Optional – skills, experience, languages…</span>
            </div>
            <textarea
              id="requirements"
              name="requirements"
              class="job-textarea"
            >{{ job.requirements }}</textarea>
          </div>

          <div class="job-footer-row">
            <p class="job-footer-note">
              Changes will be applied immediately. If you set this job to <strong>Closed</strong>,
              it will no longer accept new applicants but will remain in your history.
            </p>
            <div class="job-submit">
              <a href="{{ path('web_employer_jobs') }}" class="btn btn-secondary">
                <i class="fa-solid fa-arrow-left"></i>
                Cancel
              </a>
              <button type="submit" class="btn">
                <i class="fa-solid fa-floppy-disk"></i>
                Save changes
              </button>
            </div>
          </div>
        </form>

      </div>
    </section>

  </div>
</main>

</body>
</html>
