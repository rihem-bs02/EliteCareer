        radial-gradient(650px 360px at 90% 10%, rgba(236,72,153,0.14), transparent 60%),
        radial-gradient(720px 420px at 50% 115%, rgba(255,255,255,0.10), transparent 55%),
        url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zM63 10c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5z' fill='%23ffffff' fill-opacity='0.06' fill-rule='evenodd'/%3E%3C/svg%3E");
      opacity: 1;
      pointer-events:none;
    }

    /* These vars fall back if :root isn't loaded yet */
    .hero--modern{
      --primary: #3b82f6;
      --primary-dark: #2563eb;
      --primary-light: #93c5fd;
      --secondary: #8b5cf6;
      --accent: #ec4899;
      --dark: #1e293b;
      --darker: #0f172a;
      --gray: #64748b;
      --gray-light: #e2e8f0;
      --radius: 12px;
      --radius-lg: 16px;
      --shadow-lg: 0 20px 40px -10px rgba(0, 0, 0, 0.15);
      --transition: all 0.3s ease;
      --gradient: linear-gradient(135deg, var(--primary), var(--secondary));
    }

    .hero--modern .container{
      width: 100%;
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    }

    .hero--modern .hero__grid{
      position: relative;
      z-index: 1;
      display:grid;
      grid-template-columns: 1.05fr 0.95fr;
      gap: 42px;
      align-items: center;
    }

    .hero--modern .hero__content{ max-width: 720px; }

    .hero--modern .hero__badge{
      display:inline-flex;
      align-items:center;
      gap:10px;
      padding: 10px 14px;
      border-radius: 999px;
      background: rgba(255,255,255,0.14);
      border: 1px solid rgba(255,255,255,0.18);
      backdrop-filter: blur(10px);
      font-weight: 700;
      font-size: 13px;
      margin-bottom: 18px;
    }
    .hero--modern .hero__badge-dot{
      width: 10px;
      height: 10px;
      border-radius: 99px;
      background: rgba(255,255,255,0.9);
      box-shadow: 0 0 0 6px rgba(255,255,255,0.16);
    }

    .hero--modern .hero__title{
      font-family: 'Plus Jakarta Sans', system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
      font-weight: 900;
      letter-spacing: -0.6px;
      line-height: 1.08;
      font-size: clamp(2.2rem, 4.2vw, 3.75rem);
      margin: 0 0 14px;
      text-shadow: 0 12px 32px rgba(0,0,0,0.18);
    }

    .hero--modern .hero__subtitle{
      margin: 0 0 26px;
      font-size: 1.05rem;
      opacity: 0.92;
      max-width: 62ch;
    }

    .hero--modern .hero__search{
      display:grid;
      grid-template-columns: 1.25fr auto 0.78fr auto 0.78fr auto;
      gap: 0;
      align-items: stretch;
      padding: 8px;
      border-radius: 18px;
      background: rgba(255,255,255,0.14);
      border: 1px solid rgba(255,255,255,0.18);
      backdrop-filter: blur(12px);
      box-shadow: var(--shadow-lg);
    }

    .hero--modern .hero__field{
      display:flex;
      align-items:center;
      gap:10px;
      padding: 6px 10px;
      min-height: 56px;
    }

    .hero--modern .hero__divider{
      width: 1px;
      margin: 10px 0;
      background: rgba(255,255,255,0.22);
    }

    .hero--modern .hero__icon{
      color: rgba(15,23,42,0.55);
      font-size: 16px;
    }
    .hero--modern .hero__icon--muted{ color: rgba(15,23,42,0.45); }

    .hero--modern .hero__input,
    .hero--modern .hero__select{
      width:100%;
      border:none;
      outline:none;
      background: transparent;
      color: var(--darker);
      font-weight: 600;
      font-size: 14px;
      font-family: inherit;
    }

    .hero--modern .hero__field--input{
      background: rgba(255,255,255,0.92);
      border-radius: 14px;
      border: 1px solid rgba(226,232,240,0.9);
    }
    .hero--modern .hero__field--select{
      background: rgba(255,255,255,0.86);
      border: 1px solid rgba(226,232,240,0.9);
      border-radius: 14px;
      position: relative;
    }
    .hero--modern .hero__select{
      appearance: none;
      padding-right: 28px;
      cursor:pointer;
    }
    .hero--modern .hero__chev{
      position:absolute;
      right: 14px;
      color: var(--primary);
      pointer-events:none;
      font-size: 12px;
    }

    .hero--modern .hero__btn{
      border: none;
      cursor:pointer;
      padding: 0 18px;
      border-radius: 14px;
      background: var(--gradient);
      color:#fff;
      font-weight: 800;
      display:inline-flex;
      align-items:center;
      justify-content:center;
      gap: 10px;
      min-height: 56px;
      transition: var(--transition);
      box-shadow: 0 18px 30px -20px rgba(0,0,0,0.35);
    }
    .hero--modern .hero__btn:hover{
      transform: translateY(-2px);
      background: linear-gradient(135deg, var(--primary-dark), var(--secondary));
      box-shadow: var(--shadow-lg);
    }

    .hero--modern .hero__actions{
      display:flex;
      gap: 12px;
      flex-wrap: wrap;
      align-items: center;
      margin-top: 16px;
    }

    /* If your global .btn exists, you can remove this fallback */
    .hero--modern .btn{
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      padding: 14px 26px;
      background: var(--gradient);
      color: #fff;
      border-radius: 12px;
      font-weight: 700;
      border: none;
      text-decoration: none;
      transition: var(--transition);
      box-shadow: 0 18px 34px -24px rgba(0,0,0,0.38);
    }
    .hero--modern .btn:hover{ transform: translateY(-2px); }
    .hero--modern .btn.btn-accent{ background: var(--accent); }

    .hero--modern .hero__stats{
      margin-top: 22px;
      display:flex;
      gap: 18px;
      flex-wrap: wrap;
      opacity: 0.95;
    }
    .hero--modern .hero__stat{
      padding: 12px 14px;
      border-radius: 16px;
      background: rgba(255,255,255,0.12);
      border: 1px solid rgba(255,255,255,0.16);
      backdrop-filter: blur(10px);
      min-width: 160px;
    }
    .hero--modern .hero__stat-value{
      font-family: 'Plus Jakarta Sans', system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
      font-weight: 900;
      font-size: 18px;
      margin-bottom: 2px;
    }
    .hero--modern .hero__stat-label{ font-size: 13px; opacity: 0.9; }

    .hero--modern .hero__visual{ position: relative; min-height: 520px; }
    .hero--modern .hero__glass{
      position: relative;
      z-index: 2;
      border-radius: var(--radius-lg);
      padding: 18px;
      background: rgba(255,255,255,0.12);
      border: 1px solid rgba(255,255,255,0.18);
      backdrop-filter: blur(14px);
      box-shadow: var(--shadow-lg);
    }

    .hero--modern .hero__glass-top{
      display:flex;
      gap: 14px;
      align-items:center;
      padding: 12px;
      border-radius: 16px;
      background: rgba(255,255,255,0.10);
      border: 1px solid rgba(255,255,255,0.14);
      margin-bottom: 14px;
    }
    .hero--modern .hero__avatar{
      width: 52px; height: 52px;
      border-radius: 16px;
      background: rgba(255,255,255,0.18);
      display:flex; align-items:center; justify-content:center;
      font-size: 18px;
      box-shadow: 0 20px 40px -25px rgba(0,0,0,0.45);
    }
    .hero--modern .hero__glass-title{ font-weight: 900; font-size: 15px; }
    .hero--modern .hero__glass-sub{ font-size: 13px; opacity: 0.9; }

    .hero--modern .hero__mini-cards{ display:flex; flex-direction:column; gap: 10px; }
    .hero--modern .hero__mini{
      display:flex;
      align-items:center;
      justify-content:space-between;
      gap: 12px;
      padding: 12px;
      border-radius: 16px;
      background: rgba(255,255,255,0.92);
      color: var(--darker);
      border: 1px solid rgba(226,232,240,0.9);
    }
    .hero--modern .hero__mini-ico{
      width: 44px; height: 44px;
      border-radius: 14px;
      display:flex; align-items:center; justify-content:center;
      background: rgba(139,92,246,0.14);
      color: var(--secondary);
      flex: 0 0 auto;
    }
    .hero--modern .hero__mini-title{ font-weight: 900; }
    .hero--modern .hero__mini-meta{ font-size: 13px; color: var(--gray); margin-top: 2px; }
    .hero--modern .hero__mini-pill{
      padding: 6px 10px;
      border-radius: 999px;
      font-size: 12px;
      font-weight: 900;
      color: #fff;
      background: linear-gradient(135deg, rgba(59,130,246,0.95), rgba(139,92,246,0.95));
      white-space: nowrap;
    }
    .hero--modern .hero__mini-pill--soft{
      background: rgba(236,72,153,0.12);
      color: var(--accent);
      border: 1px solid rgba(236,72,153,0.22);
    }

    .hero--modern .hero__orb{
      position:absolute;
      border-radius: 999px;
      filter: blur(14px);
      opacity: 0.55;
      z-index: 1;
    }
    .hero--modern .hero__orb--one{
      width: 210px; height: 210px;
      left: -30px; top: 80px;
      background: rgba(236,72,153,0.55);
    }
    .hero--modern .hero__orb--two{
      width: 280px; height: 280px;
      right: -40px; top: 40px;
      background: rgba(255,255,255,0.28);
    }
    .hero--modern .hero__orb--three{
      width: 240px; height: 240px;
      right: 40px; bottom: 40px;
      background: rgba(59,130,246,0.55);
    }

    .hero--modern .hero__wave{
      position:absolute;
      left:0; right:0;
      bottom:-1px;
      height: 180px;
      background:
        url("data:image/svg+xml,%3Csvg width='1440' height='260' viewBox='0 0 1440 260' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath fill='%23ffffff' d='M0 164C160 214 320 234 480 218C640 202 800 148 960 120C1120 92 1280 90 1440 120V260H0V164Z'/%3E%3C/svg%3E")
        center bottom / cover no-repeat;
      pointer-events:none;
    }

    @media (max-width: 992px){
      .hero--modern .hero__grid{ grid-template-columns: 1fr; }
      .hero--modern .hero__visual{ min-height: auto; }
    }

    @media (max-width: 768px){
      .hero--modern{ padding: 150px 0 90px; }
      .hero--modern .hero__search{
        grid-template-columns: 1fr;
        gap: 12px;
        background: transparent;
        border: none;
        padding: 0;
        box-shadow: none;
        backdrop-filter: none;
      }
      .hero--modern .hero__divider{ display:none; }
      .hero--modern .hero__field--input,
      .hero--modern .hero__field--select,
      .hero--modern .hero__btn{ border-radius: 16px; }
    }
  </style>

