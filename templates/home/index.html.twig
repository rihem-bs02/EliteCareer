    /* ===== Modern Hero (scoped-ish) ===== */
    .hero--modern{
      position: relative;
      overflow: hidden;
      padding: 180px 0 110px;
      color: #fff;
      background: linear-gradient(135deg, rgba(37,99,235,0.96), rgba(139,92,246,0.92));
